@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TaskoCapstone.styles.css" asp-append-version="true" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"> 
</head>

<body>
    <header >
        <nav class="navbar navbar-expand-lg navbar-light d-none d-lg-block shadow-lg" style="z-index: 2000; ">
            <div class="container-fluid">
                <img src="/images/Logo.png" style="width: 50px; height: 50px;" />
                <a class="navbar-brand nav-link" asp-area="" asp-controller="Home" asp-action="Index"><strong>Tasko Capstone</strong></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Parent">Parent</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Game">Game</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

        <!-- Background Video -->
        <div id="intro" class="bg-image">
            <video src="Videos/CasptoneGame.mp4" playsinline autoplay muted loop></video>

            <!-- Video Overlay -->
            <div class="mask"></div>

            <!-- Text Container -->
            <div class="text-container">
                <h1 class="mb-3" style="font-family: 'Kidsco'; font-size: 60px;">Welcome to Tasko </h1>
                <h6 class="mb-4" style="font-family:'Kidsco'; font-size: 48px;">Where Learning Meets Fun!</h6>
            </div>
        </div>

    </header>

</body>


<main class="mt-5">

    <div class="container col-md-6 gx-5 mb-4">
       
        <h2 class="text-center"><strong> About Tasko! </strong></h2>
        <p class="text-lg-center">
            Tasko is not just a task management platform; it's a gateway to a world where chores become adventures and responsibilities turn into rewards. Tasko empowers parents to create a seamless and enjoyable way to teach their children about responsibility and time management.
        </p>

        <hr class="my-1" />

        <h2 class="text-center"><strong> Why Tasko? </strong></h2>
        <p class="text-lg-center">
            Tasko is not just a task management platform; it's a gateway to a world where chores become adventures and responsibilities turn into rewards. Tasko empowers parents to create a seamless and enjoyable way to teach their children about responsibility and time management.
        </p>
        
    </div>


    <hr class="my-5" />

    <div class="container">
        <section>
            <div class="row">
                <div class="col-md-6 gx-5 mb-4">
                    <div class="bg-image shadow-lg" style="font-size: 15px; display: inline-block; background-color: #2226; border: black;">
                        <img src="~/Images/placeholder.png" width="400" height="350" style="float: left; margin-right:15px;" />
                        <h5 class="text-center"><strong>Create Tasks</strong></h5>
                        Parents can effortlessly create tasks tailored to their children's needs, whether it's completing homework, tidying up their room, or helping with household chores.
                    </div>
                </div>

                <div class="col-md-6 gx-5 mb-4">
                    <div class="bg-image shadow-lg" style="font-size: 15px; display: inline-block; background-color: #2226; border: black;">
                        <img src="~/Images/Gameplay.png" width="400" height="350" style="float: left; margin-right:15px;" />
                        <h5 class="text-center"><strong>Earn and Play!</strong></h5>
                        Each completed task brings your child one step closer to unlocking hte magic of Tasko's virtual pet game. As they complete tasks, time is added to care for their very own virtual companions, fostering a sense of accomplishment and responsibility.
                    </div>
                </div>

        
            </div>
        </section>
    </div>

    <hr class="my-5" />

    <div class="container">
        <section>
        </section>
    </div>

</main>