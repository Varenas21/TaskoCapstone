@model EditViewModel
@{
    ViewBag.Title = "Edit Tasks";
    
}

<main style="display:flex; align-items:center; justify-content:center;">
    <form enctype="multipart/form-data" asp-controller="Tasks" asp-action="Edit" method="post">
        <input hidden asp-for="Id"/>
        <input hidden asp-for="ExistingImagePath" />

        <div class="border p-3 mt-4">
            <h2 class="text-lg-center"> Edit Task </h2>
            <div asp-validation-summary="All" class="error"></div>
        </div>
        <div class="input-container">
            <label asp-for="NameofTask"> Name of Task</label>
            <input asp-for="NameofTask" class="form-control input-user" />
            <span asp-validation-for="NameofTask" class="error"></span>
        </div>

        <div class="input-container">
            <label asp-for="Description"> Description</label>
            <input asp-for="Description" class="form-control input-user" />
            <span asp-validation-for="Description" class="error"></span>
        </div>

        <div class="input-container">
            <label asp-for="StepsofTask"> Instructions </label>
            <textarea class="textarea" asp-for="StepsofTask"> 
                @*  <input asp-for="StepsofTask" class="form-control input-user textarea" placeholder="Example: 1. Locate things that out of place \n 2. Put them in assigned location" size="3000px" /> *@
           </textarea>
            <span asp-validation-for="StepsofTask" class="error"></span>
        </div>

        <div class="input-container">
            <label asp-for="ImageofTask"> Image </label>
            <div class="custom-file">
                <input asp-for="ImageofTask" class="form-control input-user custom-file-input" />

            </div>
            <span asp-validation-for="ImageofTask" class="error"></span>
           
        </div>

        <div class="input-container">
            <label asp-for="CountdownTimer"> Gameplay Time </label>
            <input asp-for="CountdownTimer" class="form-control input-user" placeholder="Ex: 10" />
            <span asp-validation-for="CountdownTimer" class="error"></span>
        </div>

        <br />
        <br />

        <div>

            <button type="submit" class="complete-button form centered-overlay" style="font-size: 18px;cursor: pointer;padding: 14px 40px; display:flex; align-items:center; justify-content:center;">
                Edit Task
            </button>
        </div>

        @section Scripts
            {
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
            </script>
        }

    </form>
    <div>
</div>

</main>
<div>
    <section>
        <a asp-controller="Home" asp-action="Parent" class="return-button" style="position: absolute; bottom:100px; left:100px;"> RETURN TO PARENT CONTROL </a>
    </section>
</div>